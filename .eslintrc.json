{
    "parser": "babel-eslint",
    "root": true,
    "strict": 0,
    "extends": "eslint:recommended",
    "env": {
        "es6": true,
        "browser": true,
        "node": true
    },
    "ecmaFeatures": { 
        "modules": true,
        "arrowFunctions": true,
        "classes": true,
        "forOf": true,
        "generators": true
    },
    "rules": {
        "indent": [ 2, 4 ],
        "quotes": [ 2, "single" ],
        "linebreak-style": [ 2, "unix" ],
        "semi": [ 2, "always" ],
        "eqeqeq": 2,
        "arrow-spacing": 2,
        "arrow-parens": 2,
        "arrow-body-style": 2, 
        "constructor-super": 2,
        "no-var": 2,
        "no-console": 1
    }
    
}